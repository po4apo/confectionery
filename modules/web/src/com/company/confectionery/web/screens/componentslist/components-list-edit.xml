<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://componentsListEdit.caption"
        focusComponent="form"
        messagesPack="com.company.confectionery.web.screens.componentslist">
    <data>
        <instance id="componentsListDc"
                  class="com.company.confectionery.entity.ComponentsList">
            <view extends="_local">
                <property name="component" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="componentsListDc">
            <column width="350px">
                <textField id="quentityField" property="quentity"/>
                <pickerField id="componentField" property="component">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
