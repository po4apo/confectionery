<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://technologicalMapBrowse.caption"
        focusComponent="technologicalMapsTable"
        messagesPack="com.company.confectionery.web.screens.technologicalmap">
    <data readOnly="true">
        <collection id="technologicalMapsDc"
                    class="com.company.confectionery.entity.TechnologicalMap">
            <view extends="_local">
                <property name="componentsList" view="_minimal">
                    <property name="quentity"/>
                    <property name="component" view="_minimal"/>
                </property>
            </view>
            <loader id="technologicalMapsDl">
                <query>
                    <![CDATA[select e from confectionery_TechnologicalMap e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="technologicalMapsTable"
            spacing="true">
        <filter id="filter"
                applyTo="technologicalMapsTable"
                dataLoader="technologicalMapsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="technologicalMapsTable"
                    width="100%"
                    dataContainer="technologicalMapsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="technologicalMapsTable.create"/>
                <button id="editBtn" action="technologicalMapsTable.edit"/>
                <button id="removeBtn" action="technologicalMapsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
