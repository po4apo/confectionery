<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://purchasesListEdit.caption"
        focusComponent="form"
        messagesPack="com.company.confectionery.web.screens.purchaseslist">
    <data>
        <instance id="purchasesListDc"
                  class="com.company.confectionery.entity.PurchasesList">
            <view extends="_local">
                <property name="componentsList" view="_minimal">
                    <property name="quentity"/>
                    <property name="component" view="_minimal"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="purchasesListDc">
            <column width="350px">
                <dateField id="orderDateField" property="orderDate"/>
                <dateField id="accertedDateField" property="accertedDate"/>
                <checkBox id="isAcceptedField" property="isAccepted"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
