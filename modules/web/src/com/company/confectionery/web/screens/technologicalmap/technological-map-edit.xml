<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://technologicalMapEdit.caption"
        focusComponent="form"
        messagesPack="com.company.confectionery.web.screens.technologicalmap">
    <data>
        <instance id="technologicalMapDc"
                  class="com.company.confectionery.entity.TechnologicalMap">
            <view extends="_local">
                <property name="componentsList" view="_minimal">
                    <property name="quentity"/>
                    <property name="component" view="_minimal"/>
                </property>
            </view>
            <loader/>
            <collection id="componentsListDc" property="componentsList"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="technologicalMapDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <groupBox id="componentsListBox"
                  caption="msg://com.company.confectionery.entity/TechnologicalMap.componentsList">
            <table id="componentsListTable" dataContainer="componentsListDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="quentity"/>
                    <column id="component"/>
                </columns>
                <buttonsPanel>
                    <button action="componentsListTable.create"/>
                    <button action="componentsListTable.edit"/>
                    <button action="componentsListTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
